@model MVCKutuphane.Models.Entity.TBL_Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Guncelle</h2>


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readOnly = "readonly" })
        <br />
        <label>Personel Adi</label>
        @Html.TextBoxFor(k => k.Personel_Adi, new { @class = "form-control", maxlength = 15, minlength = 2, required = "" })
        <br />
        <label>Personel Soyadi</label>
        @Html.TextBoxFor(k => k.Personel_Soyadi, new { @class = "form-control", maxlength = 20, minlength = 2, required = "" })
        <br />
        <br />
        <label>Kullanici Adi</label>
        @Html.TextBoxFor(k => k.Personel_Kullanci_Adi, new { @class = "form-control", maxlength = 20, minlength = 4, required = "", @readOnly = "readonly" })
        <br />
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(k => k.Telefon, new { @class = "form-control", maxlength = 11, minlength = 11, required = "" })
        <br />
        <br />
        <label>Sifre</label>
        @Html.TextBoxFor(k => k.Sifre, new { @class = "form-control", maxlength = 16, minlength = 8, required = "" })
        <br />
    </div>
    <div>
        <button class="btn btn-warning">Guncelle</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
    <input type="hidden" name="Tur" value=3 />
}

