@model MVCKutuphane.Models.Entity.TBL_Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Kategori Guncelleme Sayfasi</h2>

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{ 
<div style="margin-bottom:15px"></div>
<div class="form-group">
    @Html.LabelFor(k => k.ID)
    @Html.TextBoxFor(k => k.ID, new { @class = "form-control",@readOnly="readonly"})
    <br />
    @Html.LabelFor(k => k.Kategori_Adi)
    @Html.TextBoxFor(k => k.Kategori_Adi, new { @class = "form-control", maxlength = 20, minlength = 2 , required = "" })
    <br />
    @Html.LabelFor(k => k.Aciklama)
    @Html.TextBoxFor(k => k.Aciklama, new { @class = "form-control", maxlength = 80, minlength = 2 , required = "" })
</div>
<div>
    <button class="btn btn-warning">Guncelle</button>
</div>
}

