@model MVCKutuphane.Models.Entity.TBL_Uyeler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/LayoutKullanici.cshtml";
}

<h2>Bakiye Ekleme Sayfasi</h2>
@using (Html.BeginForm("Ekle", "Bakiye", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Eklemek istediginiz tutari giriniz</label>
            <label>Bir kitabın değeri 5 / 5,0000'dir !</label>
            @Html.TextBoxFor(x => x.Bakiye, new { @class = "form-control", min=0 ,required = "" })
        </div>
        <button class="btn btn-warning">Bakiye Ekle!</button>
    </div>
}

