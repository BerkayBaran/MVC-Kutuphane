@model MVCKutuphane.Models.Entity.TBL_Yazar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazar Güncelleme Sayfasi</h2>
@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
            {
                <div style="margin-bottom:15px"></div>
                <div class="form-group">
                    <div style="margin-bottom:15px">
                        <label>Yazar ID</label>
                        @Html.TextBoxFor(y => y.ID, new { @class = "form-control", @readOnly = "readonly" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazar Adi</label>
                        @Html.TextBoxFor(y => y.Yazar_Adi, new { @class = "form-control", maxlength = 15, minlength = 2, required = "" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazar Soyadi</label>
                        @Html.TextBoxFor(y => y.Yazar_Soyad, new { @class = "form-control", maxlength = 20, minlength = 2, required = "" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Kitap Sayisi</label>
                        @Html.TextBoxFor(y => y.Kitap_Sayisi, new { @class = "form-control", maxlength = 5, minlength = 1, required = "" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Yazarin Detayi</label>
                        @Html.TextBoxFor(y => y.Detay, new { @class = "form-control", maxlength = 80, minlength = 2, required = "" })
                    </div>
                    <button class="btn btn-warning">Yazari Guncelle</button>
                </div>
            }
