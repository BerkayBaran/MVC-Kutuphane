@model MVCKutuphane.Models.Entity.TBL_OduncKitap
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Odunc Ver</h2>


<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Kitap Adi</label>
        @Html.DropDownListFor(k => k.TBL_Kitaplar.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Uye</label>
        @Html.DropDownListFor(k => k.TBL_Uyeler.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel</label>
        @Html.DropDownListFor(k => k.TBL_Personel.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Alis Tarihi</label>
        <input type="text" class="form-control" name="Alis_Tarihi" value="@DateTime.Now.ToShortDateString()" , readonly />
    </div>
    <div style="margin-top:15px">
        <label>Iade Tarihi</label>
        <input type="text" class="form-control" name="Iade_Tarihi" value="@DateTime.Now.AddDays(7).ToShortDateString() " />
    </div>
    <div>
        <div style="margin-bottom:15px"></div>
        <button class="btn btn-info">Kitap Odunc Ver</button>
    </div>
</form>

