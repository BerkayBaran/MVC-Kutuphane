
@model MVCKutuphane.Models.Entity.TBL_Uyeler

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Uye Ol Ekranı</title>

    <link rel="stylesheet" href="/Content/KayitLayout.css">

</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <form class="form-group" method="post">
        <div class="container">
            <div class="box">
                <div class="row">
                    <label style="color:black">Adiniz</label>
                    @Html.TextBoxFor(x => x.Uye_Adi, new { @class = "form-control", maxlength = 16, minlength = 2, required = "" })
                </div>
                <div class="row">
                    <label style="color:black">Soyadiniz</label>
                    @Html.TextBoxFor(x => x.Uye_Soyadi, new { @class = "form-control", maxlength = 16, minlength = 2, required = "" })
                </div>
                <div class="row">
                    <label style="color:black">E-Mail</label>
                    @Html.TextBoxFor(x => x.Uye_Mail, new { @class = "form-control", maxlength = 25, minlength = 9, required = "" })
                </div>
                <div class="row">
                    <label style="color:black">Kullanici Adiniz</label>
                    @Html.TextBoxFor(x => x.Kullanici_Adi, new { @class = "form-control", maxlength = 16, minlength = 4, required = "" })
                </div>
                <div class="row">
                    <label style="color:black">Sifreniz</label>
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", maxlength = 16, minlength = 8, required = "" })
                </div>
                <div class="row">
                    <label style="color:black">Cinsiyetiniz (E:Erkek, K:Kadın, B:Belirtilmemis)</label>
                    @Html.TextBoxFor(x => x.Cinsiyet, new { @class = "form-control", maxlength = 1, minlength = 1, required = "" })
                </div>
                <div class="row">
                    <label style="color:red">Ipucunuz</label>
                    <label style="color:red">ONEMLI!: Bu sifrenizi unuttugunuzda size sorulacak sorudur, sevdiginiz kitap yada evcil hayvanınızın ismini koyabilirsiniz.</label>
                    @Html.TextBoxFor(x => x.ipucu, new { @class = "form-control", maxlength = 16, minlength = 1, required = "" })
                </div>
                <div class="row">
                    <button class="btn btn-info">Uye Ol!</button>
                </div>
                @if (ViewBag.Hata == null)
                {
                     <p class="text-danger">@ViewBag.BasariliKayit</p>
                }
                else
                {
                    <p class="text-danger">@ViewBag.Hata</p>
                }
            </div>
        </div>
     </form>
</body>
</html>

